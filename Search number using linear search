#include <stdio.h>
int main()
{
    int arr[] = {15, 22, 34, 5, 8, 19, 45};
    int n = sizeof(arr) / sizeof(arr[0]);
    int search_num, found_index = -1;
    printf("Array elements: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
    printf("Enter the number to search: ");
    scanf("%d", &search_num);
    for (int i = 0; i < n; i++) {
        if (arr[i] == search_num) {
            found_index = i;
            break; 
        }
    }

    if (found_index != -1) 
{
        printf("Number %d found at index %d.\n", search_num, found_index);
    } else {
        printf("Number %d not found in the array.\n", search_num);
    }
    return 0;
}
