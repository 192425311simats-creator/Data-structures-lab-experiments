#include <stdio.h>
int main()
{
    int numbers[] = {10, 25, 7, 42, 13, 88, 3, 56}; 
    int n = sizeof(numbers) / sizeof(numbers[0]);
    printf("Checking for odd or even numbers:\n");
    for (int i = 0; i < n; i++)
{
        if (numbers[i] % 2 == 0)
{
            printf("%d is an Even number.\n", numbers[i]);
        } else {
            printf("%d is an Odd number.\n", numbers[i]);
        }
    }
    return 0;
}
