#include <stdio.h>
int main() {
    int arr[] = {5, 8, 15, 19, 22, 34, 45}; 
    int n = sizeof(arr) / sizeof(arr[0]);
    int search_num, found_index = -1;

    int left = 0;
    int right = n - 1;
    int mid;

    printf("Sorted array elements: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
    printf("Enter the number to search: ");
    scanf("%d", &search_num);
    while (left <= right) {
        mid = left + (right - left) / 2;
        if (arr[mid] == search_num) {
            found_index = mid;
            break;
        }
        if (arr[mid] < search_num) {
            left = mid + 1; 
        } else {
            right = mid - 1; 
        }
    }
    if (found_index != -1) {
        printf("Number %d found at index %d.\n", search_num, found_index);
    } else {
        printf("Number %d not found in the array.\n", search_num);
    }

    return 0;
}
